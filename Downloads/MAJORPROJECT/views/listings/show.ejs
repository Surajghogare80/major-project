<% layout("/layouts/boilerplate") %>

    <body>
        <h3>Listing detail</h3>
        <ul>
            <li>
                <%= listing.title %>
            </li>
            <li>
                <%= listing.description %>
            </li>
            <li>
                &#8377; <%= listing.price.toLocaleString("en-IN") %>
            </li>
            <li>
                <%= listing.location %>
            </li>
            <li>
                <%= listing.country %>
            </li>
        </ul>
        <br>
        <a href="/listings/<%= listing._id %>/edit">edit this route</a>
        <br><br>
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
            <button>Delete this listing</button>
        </form>
    </body>